<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/onboard_navigation"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/onBoardUserSelectionFragment"
        android:name="com.cozii.coziiandroid.onboarding.OnBoardUserSelectionFragment"
        android:label="OnBoardFirstFragment" >
        <action
            android:id="@+id/action_onBoardUserSelectionFragment_to_onBoardViewPagerFragment"
            app:destination="@id/onBoardViewPagerFragment" />
    </fragment>
    <fragment
        android:id="@+id/onBoardViewPagerFragment"
        android:name="com.cozii.coziiandroid.onboarding.OnBoardViewPagerFragment"
        android:label="OnBoardViewPagerFragment" />
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.cozii.coziiandroid.onboarding.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_onBoardUserSelectionFragment"
            app:destination="@id/onBoardUserSelectionFragment" />
    </fragment>
</navigation>