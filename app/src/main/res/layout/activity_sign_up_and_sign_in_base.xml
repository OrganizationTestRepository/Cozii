<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signupandsigninbase.SignUpAndSignInBaseActivity">


    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_sign_up_and_sign_in"
        style="@style/MyTabLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/tab_layout_end_margin"
        android:layout_marginRight="@dimen/tab_layout_end_margin"
        android:paddingEnd="@dimen/tab_end_padding"
        android:paddingRight="@dimen/tab_end_padding"
        app:layout_constraintBottom_toTopOf="@+id/ten_percent_guide_line"
        app:layout_constraintEnd_toEndOf="parent"
        app:tabIndicatorHeight="2dp" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/base_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/tab_sign_up_and_sign_in" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ten_percent_guide_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.13" />


</androidx.constraintlayout.widget.ConstraintLayout>