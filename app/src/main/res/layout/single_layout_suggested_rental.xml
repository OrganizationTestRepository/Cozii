<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="220dp"
    android:layout_height="wrap_content"
    android:background="@drawable/background_suggested_rent_box_bg"
    android:layout_marginEnd="@dimen/suggested_rental_margin_end"
    android:layout_marginTop="@dimen/tenant_option_margin">

    <ImageView
        android:id="@+id/iv_suggested_rental"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_suggested_test"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.cozii.coziiandroid.coziicustomviews.CoziiTextView
        android:id="@+id/tv_rental_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/tenant_option_left_margin"
        android:text="Suite 104  - 767 Dovercourt Rd, Toronto. 1 min to subway"
        android:textColor="@android:color/black"
        app:font_name="RobotoRegular"
        android:textSize="@dimen/suggested_rental_desc_text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_suggested_rental" />

</androidx.constraintlayout.widget.ConstraintLayout>