<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".signupandsigninbase.login.LoginFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fragment_ten_percent_guide_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_login_title"
        android:layout_marginTop="@dimen/tab_layout_top_margin"
        android:layout_marginStart="@dimen/tab_layout_end_margin"
        android:layout_marginLeft="@dimen/tab_layout_end_margin"
        android:textSize="@dimen/login_title_text_size"
        android:textColor="@color/color_login_title"
        app:layout_constraintTop_toBottomOf="@+id/fragment_ten_percent_guide_line"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>