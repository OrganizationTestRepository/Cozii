<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home.Home">
  <androidx.constraintlayout.widget.Guideline
      android:id="@+id/fragment_first_guide_line"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      app:layout_constraintGuide_percent="0.9" />
  <androidx.constraintlayout.widget.Guideline
      android:id="@+id/fragment_second_guide_line"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      app:layout_constraintGuide_percent="0.45" />
  <androidx.constraintlayout.widget.Guideline
      android:id="@+id/fragment_fourth_guide_line"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      app:layout_constraintGuide_percent="0.1" />
  <androidx.constraintlayout.widget.Guideline
      android:id="@+id/fragment_fifth_guide_line"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      app:layout_constraintGuide_percent="0.9" />

  <View
      android:id="@+id/view"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:background="@drawable/onboarding_top_view"
      app:layout_constraintBottom_toTopOf="@+id/fragment_second_guide_line"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <ImageView
      android:id="@+id/onboarding_logo"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="32dp"
      android:layout_marginLeft="20dp"
      android:src="@drawable/cozii_proptech_logo_10"
      app:layout_constraintStart_toStartOf="@id/fragment_fourth_guide_line"
      app:layout_constraintTop_toTopOf="parent" />

  <com.cozii.coziiandroid.coziicustomviews.CoziiTextView
      android:id="@+id/welcome"
      android:layout_width="264dp"
      android:layout_height="100dp"
      android:layout_marginTop="24dp"
      android:layout_marginRight="39dp"
      android:text="Welcome to Cozii Proptech. Smart property manager in real time."
      android:textColor="@android:color/white"
      android:textSize="20sp"
      app:font_name="RobotoRegular"
      app:layout_constraintStart_toStartOf="@id/onboarding_logo"
      app:layout_constraintEnd_toStartOf="@id/fragment_fifth_guide_line"
      app:layout_constraintTop_toBottomOf="@+id/onboarding_logo" />

  <com.cozii.coziiandroid.coziicustomviews.CoziiTextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="24dp"
      android:layout_marginLeft="20dp"
      android:text="You are"
      android:textColor="@android:color/holo_orange_dark"
      android:textSize="20sp"
      app:font_name="RobotoRegular"
      app:layout_constraintStart_toStartOf="@id/fragment_fourth_guide_line"
      app:layout_constraintTop_toBottomOf="@+id/welcome" />



  <LinearLayout
      android:id="@+id/tenant"
      android:layout_width="0dp"
      android:layout_height="85dp"
      android:layout_marginTop="30dp"
      app:layout_constraintTop_toBottomOf="@id/fragment_second_guide_line"
      app:layout_constraintStart_toStartOf="@id/fragment_fourth_guide_line"
      app:layout_constraintEnd_toEndOf="@id/fragment_fifth_guide_line"
      android:background="@drawable/onboarding_rectangle_outline"
      >

    <ImageView
        android:layout_width="53dp"
        android:layout_height="53dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/group"
         />

    <com.cozii.coziiandroid.coziicustomviews.CoziiTextView
        android:layout_width="67dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="15dp"
        android:text="Tenant"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:font_name="RobotoRegular" />

    <com.cozii.coziiandroid.coziicustomviews.CoziiTextView
        android:layout_width="193dp"
        android:layout_height="30dp"
        android:layout_marginTop="41dp"
        android:layout_marginStart="-67dp"
        android:text="Connect with landlord, request and track maintenance request"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        app:font_name="RobotoRegular" />

  </LinearLayout>


  <LinearLayout
      android:id="@+id/landlord"
      android:layout_width="0dp"
      android:layout_height="85dp"
      android:layout_marginTop="30dp"
      app:layout_constraintTop_toBottomOf="@id/tenant"
      app:layout_constraintStart_toStartOf="@id/fragment_fourth_guide_line"
      app:layout_constraintEnd_toEndOf="@id/fragment_fifth_guide_line"
      android:background="@drawable/onboarding_rectangle_outline"
      >
    <ImageView
        android:layout_width="53dp"
        android:layout_height="53dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/group_4"
        />

    <com.cozii.coziiandroid.coziicustomviews.CoziiTextView
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="15dp"
        android:text="Landlord"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:font_name="RobotoRegular" />

    <com.cozii.coziiandroid.coziicustomviews.CoziiTextView
        android:layout_width="193dp"
        android:layout_height="30dp"
        android:layout_marginTop="41dp"
        android:layout_marginStart="-73dp"
        android:text="Receive and monitor repairs, receive payments, advertise your properties"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        app:font_name="RobotoRegular" />


  </LinearLayout>


  <LinearLayout
      android:layout_width="0dp"
      android:layout_height="85dp"
      android:layout_marginTop="30dp"
      app:layout_constraintTop_toBottomOf="@id/landlord"
      app:layout_constraintStart_toStartOf="@id/fragment_fourth_guide_line"
      app:layout_constraintEnd_toEndOf="@id/fragment_fifth_guide_line"
      android:background="@drawable/onboarding_rectangle_outline"
      >

    <ImageView
        android:layout_width="53dp"
        android:layout_height="53dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/group_8"
        />

    <com.cozii.coziiandroid.coziicustomviews.CoziiTextView
        android:layout_width="89dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="15dp"
        android:text="Handyman"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:font_name="RobotoRegular" />

    <com.cozii.coziiandroid.coziicustomviews.CoziiTextView
        android:layout_width="193dp"
        android:layout_height="30dp"
        android:layout_marginTop="41dp"
        android:layout_marginStart="-89dp"
        android:text="Reach more customers, get new work orders and increase your income"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        app:font_name="RobotoRegular" />

  </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>